<div class="row">
  <div class="col-md-12">
    <h2>Users</h2>
    <table class="table table-striped" style="table-layout:fixed">
      <thead>
        <tr>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td>
              <div class="btn-group btn-group-sm" role="group">
                <%= link_to "Timeline", user_posts_path(user), class: "btn btn-default" %>
              </div>
            </td>
            <td>
              <% if current_user.following?(user) %>
                <p>Following</p>
              <% else %>
                <p>Not following</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
